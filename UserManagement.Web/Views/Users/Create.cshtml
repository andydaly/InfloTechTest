@model UserManagement.Data.Entities.User
@{
    ViewData["Title"] = "Add User";
}
<h2>Add User</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Forename" class="form-label"></label>
        <input asp-for="Forename" class="form-control" />
        <span asp-validation-for="Forename" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Surname" class="form-label"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" id="PasswordCreate" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="ShowPasswordCreate"
               onchange="togglePwd('PasswordCreate','ShowPasswordCreate')">
        <label for="ShowPasswordCreate" class="form-check-label">Show password</label>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(inputId, chkId) {
            const i = document.getElementById(inputId);
            const c = document.getElementById(chkId);
            if (i && c) i.type = c.checked ? 'text' : 'password';
        }
    </script>
}
