@model UserManagement.Web.Models.Users.UserListViewModel

<h2>User List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Account Active</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @($"{item.DateOfBirth:yyyy-MM-dd}")
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" href="#">View</a></li>
                                <li><a class="dropdown-item" href="#">Edit</a></li>
                                <li><a class="dropdown-item" href="#">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mb-3">
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" asp-route-filter="all" class="btn btn-secondary">Show All</a>
        <a asp-controller="Users" asp-action="List" asp-route-filter="active" class="btn btn-secondary">Active Only</a>
        <a asp-controller="Users" asp-action="List" asp-route-filter="inactive" class="btn btn-secondary">Non Active</a>
    </div>
    <span class="ms-3">Current filter: @Model.CurrentFilter</span>

    <a href="#" class="btn btn-primary float-end">
        Add User
    </a>
</div>
